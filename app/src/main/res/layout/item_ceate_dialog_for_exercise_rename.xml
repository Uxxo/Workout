<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/renaming_dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/set_new_exercise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_exercise_title"
        />

    <EditText
        android:id="@+id/input_new_exercise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/set_new_exercise_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_exercise_group"
        />

    <EditText
        android:id="@+id/input_new_exercise_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</LinearLayout>