<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:padding="8dp"
    >




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workoutRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startNewWorkout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/workout_custom_view"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startNewWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/materialButtonOutlinedStyle"
        app:layout_constraintTop_toBottomOf="@id/workoutRecycler"
        app:layout_constraintBottom_toTopOf="@id/my_workouts"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/start_new_workout"
        android:textColor="#424242"
        />

    <ImageButton
        android:id="@+id/my_workouts"
        android:src="@drawable/ic_workouts_list"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:tint="#424242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/my_exercises"
        app:layout_constraintTop_toBottomOf="@id/startNewWorkout"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/my_exercises"
        android:src="@drawable/ic_exercises_list"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:tint="#424242"
        app:layout_constraintStart_toEndOf="@id/my_workouts"
        app:layout_constraintEnd_toStartOf="@id/my_bio"
        app:layout_constraintTop_toTopOf="@id/my_workouts"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/my_bio"
        android:src="@drawable/ic_bio"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:tint="#424242"
        app:layout_constraintStart_toEndOf="@id/my_exercises"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_workouts"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#CC000000"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>